function lshost() {
    cat <(lshosts | head -n1) <(lshosts | grep -P -e "$1")
}

function bhost() {
    cat <(bhosts | head -n1) <(bhosts | grep -P -e "$1")
}

function bak() {
    f=$1
    cp $f ${f}.bak
}

